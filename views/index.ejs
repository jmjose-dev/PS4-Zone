<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>PS4-Zone</title>
        <link rel="stylesheet" href="design.css">
        <link rel="stylesheet" href="https://unpkg.com/spectre.css/dist/spectre.min.css">
        <link rel="stylesheet" href="https://unpkg.com/spectre.css/dist/spectre-exp.min.css">
        <link rel="stylesheet" href="https://unpkg.com/spectre.css/dist/spectre-icons.min.css">
    </head>
    <body class="midnight-city">
        <h1>PS4-Zone</h1>
        <div class="hero-lg bg-gray">
            <div class="hero-body">
              <h1>Playstation 4</h1>
              <h2>Company: <%=ps4Details.company.name %></h2>
              <h2>Release date: <%=ps4Details.release_date %></h2>
              <p><%=ps4Details.deck %></p>
            </div>
        </div>




        <div class="container">
            <div class="columns">
                <%for(i=0;i<parsedBody.length;i++) { %>
                    <div class="column col-3 col-xs-12 wide-padding">
                        <% console.log(parsedBody[i].name + ":" + Object.keys(parsedBody[i].platforms).length) %>
                        <div class="card">
                            <div class="card-image">
                                <img src='<%=parsedBody[i].image.small_url%>' class="img-responsive">
                            </div>
                            <div class="card-header">
                              <div class="card-title h5"><%=parsedBody[i].name %></div>
                            </div>
                            <div class="card-body">
                                <p><%=parsedBody[i].deck %></p>
                            </div>
                            <div class="card-footer">
                                <p>Platforms:
                                    <% for(y=0;y<parsedBody[i].platforms.length;y++) { %>
                                        <span class="chip">
                                            <%=parsedBody[i].platforms[y].name %>
                                        </span>
                                    <% } %>
                                </p>
                              <button class="btn btn-primary" formaction="/game">See More Info</button>
                            </div>
                          </div>
                        </div>
                <% } %>
            </div>
        </div>
    </body>
</html>