<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>PS4-Zone</title>
        <link rel="stylesheet" href="design.css">
        <link rel="stylesheet" href="https://unpkg.com/spectre.css/dist/spectre.min.css">
        <link rel="stylesheet" href="https://unpkg.com/spectre.css/dist/spectre-exp.min.css">
        <link rel="stylesheet" href="https://unpkg.com/spectre.css/dist/spectre-icons.min.css">
    </head>
    <body class="midnight-city">
        <h1>PS4-Zone</h1>
        <div class="hero-lg bg-gray">
            <div class="hero-body">
              <h1>Playstation 4</h1>
              <p><%=ps4Details %></p>
            </div>
          </div>




        <div class="container">
            <div class="columns">
                <%for(i=0;i<parsedBody.length;i++) { %>
                    <div class="column col-3 col-xs-12 wide-padding">
                        <div class="card">
                            <div class="card-image">
                                <img src='<%=parsedBody[i].image.small_url%>' class="img-responsive">
                            </div>
                            <div class="card-header">
                              <div class="card-title h5"><%=parsedBody[i].name %></div>
                            </div>
                            <div class="card-body">
                                <%=parsedBody[i].deck %>
                            </div>
                            <div class="card-footer">
                              <button class="btn btn-primary" formaction="/game">See More Info</button>
                            </div>
                          </div>
                    </div>
                <% } %>
            </div>
        </div>
    </body>
</html>